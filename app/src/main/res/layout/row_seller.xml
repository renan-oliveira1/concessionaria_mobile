<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_row_seller"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:padding="7dp"
    android:background="@drawable/shape_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="SellerName"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/text_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_seller"
        android:text="Idade:"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/text_age_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/text_age"
        app:layout_constraintTop_toBottomOf="@+id/name_seller"
        android:text="12"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        />

    <RadioButton
        android:id="@+id/radio_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button_info_seller"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Informações"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="11sp"

        android:textColor="@color/white"

        android:background="@drawable/shape_button"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>